#![sample("aws-iam")]

iam account {
  role appRole {
    assume = {
      Service = ["ec2.amazonaws.com"]
    }
    policy readOnly {
      statement allowS3 {
        effect = "Allow"
        actions = ["s3:GetObject","s3:ListBucket"]
        resources = [
          "arn:aws:s3:::my-bucket",
          "arn:aws:s3:::my-bucket/*"
        ]
      }
    }
  }
}

